<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.igl.gov.system.dao.SysUserDao">
	 <insert id="insert" parameterType="SysUser">
		INSERT INTO sys_user(user_name,name,mobile) VALUES (#{userName},#{name},#{mobile})
	 </insert>

	<select id="queryLoginUser" parameterType="java.util.Map" resultType="SysUserDto">
		SELECT id,user_name as userName FROM sys_user where user_name = #{userName} and password = #{password}
	</select>
</mapper>