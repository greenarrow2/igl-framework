<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.igl.gov.system.dao.SysUserDao">
    <resultMap id="sysUserDto" type="com.igl.gov.system.dto.SysUserDto">
        <id column="id" property="id"/>
        <id property="username" column="user_name"/>
        <id property="email" column="email"/>
        <id property="mobile" column="mobile" />
        <id property="name" column="name" />
        <id property="gender" column="gender"/>
        <id property="createTime" column="create_time" />
    </resultMap>
    <insert id="insert" parameterType="SysUser" keyProperty="id" useGeneratedKeys="true">
		INSERT INTO sys_user(user_name,name,mobile,email,password,create_time,create_by,version) VALUES (#{username},#{name},#{mobile},#{email},#{password},now(),
		<choose>
            <when test="createBy != null">
                #{createBy}
            </when>
            <otherwise>
                0
            </otherwise>
        </choose> ,0)
	 </insert>

    <select id="query" parameterType="map" resultType="SysUserDto">
            SELECT
            u.id AS id,
            u.user_name AS username,
            u.`name` AS `name`,
            u.mobile AS mobile,
            u.email AS email,
            ui.gender AS gender,
            ui.role_id AS roleId
            FROM
            sys_user AS u
            INNER JOIN sys_user_info AS ui ON u.id = ui.user_id
            <where>
                <if test="username != null and username != ''">
                    u.user_name LIKE CONCAT('%',TRIM(#{username}),'%')
                </if>
                <if test="name != null and name != ''">
                    AND u.name LIKE CONCAT('%',TRIM(#{name}),'%')
                </if>
                <if test="mobile != null and mobile !=''">
                    AND  u.mobile LIKE CONCAT('%',TRIM(#{mobile}),'%')
                </if>
                <if test="email != null and email !=''">
                    AND u.email LIKE CONCAT('%',TRIM(#{email}),'%')
                </if>
            </where>
    </select>

    <select id="count" parameterType="map" resultType="int">
        SELECT
        COUNT(1)
        FROM
        sys_user AS u
        INNER JOIN sys_user_info AS ui ON u.id = ui.user_id
        <where>
            <if test="username != null and username != ''">
                u.user_name LIKE CONCAT('%',TRIM(#{username}),'%')
            </if>
            <if test="name != null and name != ''">
                AND u.name LIKE CONCAT('%',TRIM(#{name}),'%')
            </if>
            <if test="mobile != null and mobile !=''">
                AND  u.mobile LIKE CONCAT('%',TRIM(#{mobile}),'%')
            </if>
            <if test="email != null and email !=''">
                AND u.email LIKE CONCAT('%',TRIM(#{email}),'%')
            </if>
        </where>
    </select>

    <select id="queryLoginUser" parameterType="java.util.Map" resultType="SysUserDto">
		SELECT id,user_name as username,create_time as createTime FROM sys_user where (user_name = #{username} OR mobile = #{username} OR  email = #{username})and password = #{password}
	</select>

    <!--更新用户-->
    <update id="update" parameterType="SysUser">
        UPDATE sys_user
        <set>
            <if test="username != null and username != ''">
                user_name = #{username},
            </if>
            <if test="name != null and name !=''">
                name = #{name},
            </if>
            <if test="mobile != null and mobile != ''">
                mobile = #{mobile},
            </if>
            <if test="password!= null and password != ''">
                password = #{password},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            version = version + 1
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id="delete" parameterType="map">
        DELETE  from sys_user where id in
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
        ;
        DELETE  from sys_user_info where user_id in
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="find" parameterType="integer" resultMap="sysUserDto" >
        SELECT u.*,ui.* FROM sys_user u,sys_user_info  ui WHERE u.id = ui.user_id and u.id = #{id} limit 1
    </select>

</mapper>